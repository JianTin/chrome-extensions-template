{
  "name": "chrome-extensions-template",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run clear && npm run copy && parcel build src/action/index.html src/options/index.html src/background/index.ts --dist-dir dist && node ./injectWatch/index.js build",
    "watch-parcel": "parcel watch src/action/index.html src/options/index.html src/background/index.ts --dist-dir dist",
    "watch-node-parcel": "node ./injectWatch/index.js watch",
    "watch": "concurrently \"npm run watch-node-parcel\" \"npm run watch-parcel\"",
    "clear": "rimraf dist",
    "copy": "copyfiles manifest.json assets/** dist"
  },
  "devDependencies": {
    "@parcel/transformer-vue": "^2.1.1",
    "@types/chrome": "^0.0.175",
    "copyfiles": "^2.4.1",
    "parcel": "^2.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "concurrently": "^7.0.0",
    "node-watch": "^0.7.2"
  },
  "dependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vue": "^3.2.26"
  }
}
